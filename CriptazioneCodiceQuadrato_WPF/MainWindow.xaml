<Window x:Class="WPF_CriptazioneQuadrato.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criptazione Quadrata" Height="350" Width="500" Background="BlanchedAlmond" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Scrivi il testo da criptare:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,7,0,0" Foreground="Black"/>
        <TextBox Name="InputTextBox" Height="100" Width="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,33,0,0" Background="White" Foreground="Black" TextWrapping="Wrap"/>
        <Button Content="Cripta" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,150,0,0" Width="75" Background="DarkSalmon" Foreground="Black" Click="EncryptButton_Click"/>
        <Label Content="Testo criptato:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,173,0,0" Foreground="Black"/>
        <TextBox Name="OutputTextBox" Height="100" Width="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,199,0,0" Background="White" Foreground="Black" TextWrapping="Wrap" IsReadOnly="True"/>
    </Grid>
</Window>
